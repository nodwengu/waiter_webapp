<div class="row">
   <div class="col s12 m12">
      <div class="card" style="margin: 4rem 0 1rem 0;">

         <button class="btn waves-effect waves-light left btn-flat" style="margin: 3% 0 3% 3%;"><a href="/"
               style="color: #000;">Back</a>
            <i class="material-icons left">keyboard_backspace</i>
         </button>
         <button class="btn waves-effect waves-light right btn-flat" style="margin: 3% 3% 3% 0;">
            <a href="/auth/logout" style="color: #000;">Logout</a>
            <i class="material-icons left"></i>
         </button> 
        
         <div class="card-content">
            <div class="row">
               <div class="col s12 m12" style="">

                  <div>
                     <h4 class="center" style="margin: 3% 0 2% 0;">Waiters List:</h4>
                     <table class="highlight" style="    border: solid 1px #DCDBDC;">
                        <thead>
                           <tr>
                              <th style="font-size: 1.4em;">Username</th>
                           </tr>
                        </thead>

                        <tbody>
                           {{#each waiters}}
                           <tr>
                              <td class=""> <a href="/waiters/{{username}}">{{username}}</a></td>
                           </tr>
                           {{/each}}
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>