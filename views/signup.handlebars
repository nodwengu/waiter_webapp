<div class="row">
   <div class="col s12 m12">
      <div class="message animated fadeIn">
         {{messages}}
      </div>
      <div class="card" style="margin: 4rem 0 1rem 0;">
         <div class="card-content">
            <div class="row">
               <div class="col s12 m12" style="">
                  <main>
                     <center>
                        <h5 class="indigo-text">Signup / Register</h5>
                        <div class="section"></div>

                        <div class="container">
                           <div class="z-depth-1 grey lighten-4 row"
                              style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                              <form class="col s12" action="/auth/signup" method="post">
                                 <div class='row'>
                                    <div class='col s12'>
                                    </div>
                                 </div>

                                 <div class='row'>
                                    <div class='input-field col s12'>
                                       <input class='validate' type='text' name='username' id='username' required />
                                       <label for='username'>Enter your username</label>
                                    </div>
                                 </div>
                                 <div class='row'>
                                    <div class='input-field col s12'>
                                       <input class='validate' type='password' name='password' id='password' required />
                                       <label for='password'>Enter your password</label>
                                    </div>
                                    <label style='float: right;'>
                                       <a class='pink-text' href='#!'><b>Forgot Password?</b></a>
                                    </label>
                                 </div>

                                 <br />
                                 <center>
                                    <div class='row'>
                                       <button type='submit' name='btn_login'
                                          class='col s12 btn btn-large waves-effect #49BCAD'>Signup</button>
                                    </div>
                                 </center>
                              </form>
                           </div>
                        </div>
                        <a href="/login">Login to your account</a>
                     </center>

                     <div class="section"></div>
                     <div class="section"></div>
                  </main>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>