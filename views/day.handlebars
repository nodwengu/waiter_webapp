<div class="row">
   <div class="col s12 m12">
      <div class="card" style="margin: 4rem 0 2rem 0;">
         <button class="btn waves-effect waves-light right btn-flat" style="margin: 3% 3% 3% 0;"><a href="/"
               style="color: #000;">Home</a>
            <i class="material-icons left">home</i>
         </button>
         <button class="btn waves-effect waves-light right btn-flat" style="margin: 3% 3% 3% 0;">
            <a href="/auth/logout" style="color: #000;">Logout</a>
            <i class="material-icons left"></i>
         </button> 

         <div class="card-content">
            <div class="row">
               <div class="col s12 m12" style="">

                  <div>
                     <h4 class="center" style="margin: 3% 0 2% 0;">{{day}}</h4>
                     <table class="highlight" style="border: solid 1px #DCDBDC;">
                        <thead>
                           <tr>
                              <th style="font-size: 1.4em;">Username</th>
                              <th style="font-size: 1.4em;">Actions</th>
                           </tr>
                        </thead>

                        <tbody>
                           {{#each waiterDays}}
                           <tr>
                              <td class=""> <a href="#">{{username}}</a></td>
                              <td class="">
                                 <a href="/day/{{day_name}}/delete/{{username}}" class="waves-effect #f44336 red btn"><i
                                       class="material-icons left">delete</i>Remove</a>
                              </td>
                           </tr>
                           {{/each}}
                        </tbody>
                     </table>
                  </div>

                  <div style="margin: 4em 0 0 0;">
                     <ul class="collapsible">
                        <li>
                           <div class="collapsible-header center">
                              <button class="btn waves-effect waves-light right btn-flat">
                                 <h4 class="center" style="margin: 0 0 0 0;">Available Waiters:</h4>
                              </button>
                           </div>
                           <div class="">
                              <div>
                                 <table class="highlight" style="    border: solid 1px #DCDBDC;">
                                    <thead>
                                       <tr>
                                          <th style="font-size: 1.4em;">Username</th>
                                          <th style="font-size: 1.4em;">Actions</th>
                                       </tr>
                                    </thead>

                                    <tbody>
                                       {{#each available}}
                                       <tr>
                                          <td class=""> <a href="/waiters/{{username}}">{{username}}</a></td>
                                          <td class="">
                                             <a href="/waiters/{{username}}" class="waves-effect waves-light btn">
                                                <i class="material-icons left">add</i>Add</a>
                                          </td>
                                       </tr>
                                       {{/each}}
                                    </tbody>
                                 </table>
                              </div>
                           </div>
                        </li>

                     </ul>

                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>