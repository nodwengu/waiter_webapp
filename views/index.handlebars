<div class="row">
  <div class="col s12 m12">
    <div class="message animated fadeIn">
         {{messages}}
    </div>
    <div class="card" style="margin: 4rem 0 1rem 0;">

      <button class="btn waves-effect waves-light right" style="margin: 2% 3% 0 0;"><a href="/waiters"
          style="color: #fff;">Waiters List</a>
        <i class="material-icons right">send</i>
      </button>
      <div class="" style="padding: 1em 0 1.8em 0;">
        <h3 class="center" style="margin: 5% 0 0 0;">Waiter Availability App</h3>
      </div>
      <div class="card-content">
        <div class="row">
          <div class="col s12 m12" style="">
            <h4 class="center" style="margin: 0% 0 0 0;">Days:</h4>
            <div class="daysList center">
              {{#each days}}
              <a href="/day/{{day_name}}" class="{{avail_status}}">
                {{day_name}}
                <p>{{curr_date}}</p>
                {{!-- <hr style="color: #C0C0C0 "> --}}
                <br />
                <div>Waiters: {{days_counter}}</div>
                <br />
              </a>
              {{/each}}
              
            </div>
            <div class="right" style="margin: 5% 3% 0 0;">
              <span class="list enough" style="padding: 0px 12px 0 1em;margin-left:5px;"></span>Enough Waiters
              <span class="list extra" style="padding: 0px 12px 0 1em;margin-left:5px;"></span>Extra Waiters
              <span class="list less" style="padding: 0px 12px 0 1em;margin-left:5px;"></span>Less Waiters
            </div>
            <button class="btn waves-effect waves-light left" style="margin: 5% 3% 0 0;">
              <a href="/delete"style="color: #fff;">Reset</a>
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
